{
  "manifest_version": 2,

  "name": "Everything is Awesome!",
  "description": "This extension will play the 'Everything is Awesome' song.",
  "version": "1.0",

  "permissions": [
    "https://youtube.com/*"
  ],
  "browser_action": {
    "default_icon": "lego16.png",
    "default_popup": "popup.html"
  },

  "icons": { 
    "16": "lego16.png",
    "48": "lego48.png",
    "128": "lego128.png" 
  }
}